<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="action_absence_request" model="ir.actions.act_window">
        <field name="name">Gestion des Absences</field>
        <field name="res_model">absence.request</field>
        <field name="view_mode">tree,form,calendar</field>
        <field name="context">{'default_employee_id': uid}</field>
    </record>

    <menuitem id="menu_absence_root" name="Gestion des Absences" sequence="10"/>
    
    <menuitem id="menu_absence_main" 
              name="Mes Demandes d'Absence" 
              parent="menu_absence_root" 
              action="action_absence_request" 
              sequence="10"/>

    <record id="view_absence_tree" model="ir.ui.view">
        <field name="name">absence.request.tree</field>
        <field name="model">absence.request</field>
        <field name="arch" type="xml">
            <tree decoration-success="state == 'approved'" 
                  decoration-danger="state == 'refused'" 
                  decoration-info="state == 'submitted'"
                  decoration-muted="state == 'draft'">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="date_start"/>
                <field name="date_end"/>
                <field name="duration_days" sum="Total (jours)"/>
                <field name="absence_type"/>
                <field name="request_date"/>
                <field name="state" widget="badge" 
                       decoration-success="state == 'approved'"
                       decoration-danger="state == 'refused'"
                       decoration-info="state == 'submitted'"/>
            </tree>
        </field>
    </record>

    <record id="view_absence_form" model="ir.ui.view">
        <field name="name">absence.request.form</field>
        <field name="model">absence.request</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_submit" string="Soumettre" type="object" 
                            class="oe_highlight" invisible="state != 'draft'"/>
                    <button name="action_approve" string="Approuver" type="object" 
                            class="oe_highlight" invisible="state != 'submitted'"
                            groups="base.group_user"/>
                    <button name="action_refuse" string="Refuser" type="object" 
                            invisible="state != 'submitted'"
                            groups="base.group_user"/>
                    <button name="action_reset_to_draft" string="Remettre en brouillon" type="object" 
                            invisible="state in ['draft', 'submitted']"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,submitted,approved"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name" readonly="1"/>
                            <field name="employee_id" readonly="state != 'draft'"/>
                            <field name="request_date" readonly="state != 'draft'"/>
                            <field name="manager_id" readonly="1"/>
                        </group>
                        <group>
                            <field name="absence_type" readonly="state != 'draft'"/>
                            <field name="date_start" readonly="state != 'draft'"/>
                            <field name="date_end" readonly="state != 'draft'"/>
                            <field name="duration_days" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Justification" name="justification">
                            <group>
                                <field name="justification" readonly="state != 'draft'" 
                                       placeholder="Veuillez justifier votre absence..."/>
                            </group>
                            <group string="Pièces jointes">
                                <field name="attachment_ids" widget="many2many_binary"/>
                            </group>
                        </page>
                        <page string="Validation" name="validation" invisible="state == 'draft'">
                            <group>
                                <field name="manager_comment" readonly="state not in ['submitted']" 
                                       placeholder="Commentaire du manager..."/>
                                <field name="approved_by" readonly="1"/>
                                <field name="approval_date" readonly="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_absence_search" model="ir.ui.view">
        <field name="name">absence.request.search</field>
        <field name="model">absence.request</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="employee_id"/>
                <field name="justification"/>
                <filter string="Mes Demandes" name="my_requests" domain="[('employee_id', '=', uid)]"/>
                <filter string="En Attente" name="submitted" domain="[('state', '=', 'submitted')]"/>
                <filter string="Approuvées" name="approved" domain="[('state', '=', 'approved')]"/>
                <filter string="Refusées" name="refused" domain="[('state', '=', 'refused')]"/>
                <filter string="Brouillons" name="draft" domain="[('state', '=', 'draft')]"/>
                <separator/>
                <filter string="Maladie" name="sick" domain="[('absence_type', '=', 'sick')]"/>
                <filter string="Congé" name="vacation" domain="[('absence_type', '=', 'vacation')]"/>
                <filter string="Personnel" name="personal" domain="[('absence_type', '=', 'personal')]"/>
                <group expand="0" string="Grouper par">
                    <filter string="Employé" name="group_employee" context="{'group_by': 'employee_id'}"/>
                    <filter string="Type d'absence" name="group_type" context="{'group_by': 'absence_type'}"/>
                    <filter string="Statut" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Date de demande" name="group_date" context="{'group_by': 'request_date'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="view_absence_calendar" model="ir.ui.view">
        <field name="name">absence.request.calendar</field>
        <field name="model">absence.request</field>
        <field name="arch" type="xml">
            <calendar string="Calendrier des Absences" 
                      date_start="date_start" 
                      date_stop="date_end"
                      color="absence_type"
                      event_open_popup="true">
                <field name="employee_id"/>
                <field name="absence_type"/>
                <field name="state"/>
            </calendar>
        </field>
    </record>
</odoo>